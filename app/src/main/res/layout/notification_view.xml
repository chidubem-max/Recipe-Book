<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
      android:id="@+id/dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="22dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/ic_dot"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/notifi_msg"
      app:layout_constraintTop_toTopOf="parent" />


  <TextView
      android:id="@+id/notifi_msg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toRightOf="@id/dot"
      android:text="@string/noti_msg_1"
      android:elevation="46dp"
      android:layout_marginTop="18dp"
      android:layout_marginLeft="15dp"
      />

  <TextView
      android:id="@+id/notifi_msg_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/notifi_msg"
      app:layout_constraintLeft_toRightOf="@id/dot"
      android:text="Yesterday"
      style="@style/date"
      android:elevation="46dp"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="15dp"
      />


  <View
      android:id="@+id/line"
      android:layout_width="320dp"
      android:layout_height="1dp"
      android:layout_marginTop="12dp"
      android:background="#8894A2"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      app:layout_constraintTop_toBottomOf="@id/notifi_msg_2"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>