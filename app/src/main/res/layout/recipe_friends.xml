<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/friends_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/chats_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"

            android:layout_weight="1"
            style="@style/chats_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_recipe_logo"
            android:layout_marginRight="29dp"

            />
    </LinearLayout>

    <EditText
        android:id="@+id/search_edit_text"
        style="@style/placeholder"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:elevation="20dp"
        android:background="@drawable/recipe_search"
        android:hint="Search Friends"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/black"
        android:textColorHint="#8894A2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friends_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_search"
        android:elevation="20dp"
        app:layout_constraintRight_toRightOf="@id/search_edit_text"
        app:layout_constraintTop_toTopOf="@id/search_edit_text" />

    <TextView
        android:id="@+id/text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="My Friends"
        style="@style/heading"
        />

    // first box//
     <ImageView
         android:id="@+id/friends_box"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/friend_box"
         android:elevation="20dp"
         app:layout_constraintTop_toBottomOf="@id/text_heading"
         android:layout_marginHorizontal="20dp"
         android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/friends_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/image"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="@id/friends_box"
            app:layout_constraintStart_toStartOf="@id/friends_box"
            android:elevation="20dp"/>

        <TextView
            android:id="@+id/friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            android:text="Adebayo Apercu"
            app:layout_constraintTop_toTopOf="@id/friends_box"
            app:layout_constraintStart_toEndOf="@id/friends_image"
            android:elevation="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:text="100K Friends"
            app:layout_constraintTop_toTopOf="@id/friends_box"
            app:layout_constraintStart_toEndOf="@id/friends_image"
            android:elevation="20dp"
            />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/remove_search"
            app:layout_constraintEnd_toEndOf="@id/friends_box"
            app:layout_constraintTop_toTopOf="@id/friends_box"
            android:elevation="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Friend"
            android:textColor="@color/white"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@id/remove"
            app:layout_constraintTop_toTopOf="@id/friends_box"
            android:elevation="20dp"
            />

    // second box


    <ImageView
        android:id="@+id/friends_box_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_box"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/friends_box"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/friends_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/image"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/friends_box_1"
        app:layout_constraintStart_toStartOf="@id/friends_box_1"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/friends_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:text="Ronke Igboegwu"
        app:layout_constraintTop_toTopOf="@id/friends_box_1"
        app:layout_constraintStart_toEndOf="@id/friends_image_1"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:text="200 Friends"
        app:layout_constraintTop_toTopOf="@id/friends_box_1"
        app:layout_constraintStart_toEndOf="@id/friends_image"
        android:elevation="20dp"
        />

    <ImageView
        android:id="@+id/remove_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/remove_search"
        app:layout_constraintEnd_toEndOf="@id/friends_box_1"
        app:layout_constraintTop_toTopOf="@id/friends_box_1"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:textColor="@color/white"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="@id/remove_1"
        app:layout_constraintTop_toTopOf="@id/remove_1"
        android:elevation="20dp"
        />




    // third box//
    <ImageView
        android:id="@+id/friends_box_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_box"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/friends_box_1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/friends_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/image"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/friends_box_2"
        app:layout_constraintStart_toStartOf="@id/friends_box_2"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/friends_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:text="Ekaite Akande"
        app:layout_constraintTop_toTopOf="@id/friends_box_2"
        app:layout_constraintStart_toEndOf="@id/friends_image_2"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:text="10K Friends"
        app:layout_constraintTop_toTopOf="@id/friends_box_2"
        app:layout_constraintStart_toEndOf="@id/friends_image_2"
        android:elevation="20dp"
        />

    <ImageView
        android:id="@+id/remove_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/remove_search"
        app:layout_constraintEnd_toEndOf="@id/friends_box_2"
        app:layout_constraintTop_toTopOf="@id/friends_box_2"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:textColor="@color/white"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@id/remove_2"
        app:layout_constraintTop_toTopOf="@id/friends_box_2"
        android:elevation="20dp"
        />


    // box//
    <ImageView
        android:id="@+id/friends_box_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_box"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/friends_box_2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/friends_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/image"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/friends_box_3"
        app:layout_constraintStart_toStartOf="@id/friends_box_2"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/friends_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:text="Adedunni Nwaneri"
        app:layout_constraintTop_toTopOf="@id/friends_box_3"
        app:layout_constraintStart_toEndOf="@id/friends_image_3"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:text="19K Friends"
        app:layout_constraintTop_toTopOf="@id/friends_box_3"
        app:layout_constraintStart_toEndOf="@id/friends_image_3"
        android:elevation="20dp"
        />

    <ImageView
        android:id="@+id/remove_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/remove_search"
        app:layout_constraintEnd_toEndOf="@id/friends_box_3"
        app:layout_constraintTop_toTopOf="@id/friends_box_3"
        android:elevation="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:textColor="@color/white"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@id/remove_3"
        app:layout_constraintTop_toTopOf="@id/friends_box_3"
        android:elevation="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>